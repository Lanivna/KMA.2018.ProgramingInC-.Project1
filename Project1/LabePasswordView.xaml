<UserControl x:Class="KMA.Group2.Project1.LabelPasswordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:project1="clr-namespace:KMA.Group2.Project1"
             mc:Ignorable="d" 
             d:DesignHeight="38" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Label Name="Label" Grid.Row="0" Height="25" FontWeight="Bold" FontSize="10" Margin="-2,-10,0,0"  Content="{Binding PropertyName, RelativeSource={RelativeSource FindAncestor, AncestorType=project1:LabelPasswordView}, UpdateSourceTrigger=PropertyChanged}"/>
        <PasswordBox Name="TextBox" Grid.Row ="1" FontSize="14" FontWeight="Bold" Height="25" project1:PasswordBoxAssistant.BindPassword="true"  project1:PasswordBoxAssistant.BoundPassword="{Binding PropertyValue, RelativeSource={RelativeSource FindAncestor, AncestorType=project1:LabelPasswordView}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
    </Grid>
</UserControl>
